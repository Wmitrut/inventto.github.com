<!DOCTYPE html>
<html>
<head>
<title>InventtoSite</title>
<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
<%= javascript_include_tag :defaults %>
</head>
<body>
<div id="head">
  <div class="fix_width">
    <div id="menu">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/clientes">Clientes</a></li>
        <li><a href="/s">Invent.tos</a></li>
        <li><a href="/res">Invent.tores</a></li>
        <li><a href="/sobre">Sobre</a></li>
        <li><a href="/contato">Contato</a></li>
        <li>
          <% if session[:user_id] and session[:user_id] > 0 %>
            <a href="/logout">Logout
          <% else %>
            <a href="/auth/google_oauth2">Login
          <% end %>
        </a></li>
      </ul>
    </div>
    <div id="logo">
      <a>invent</a>.to
    </div>
  </div>
</div>
<div id="body" class="fix_width">
  <%= yield %>
  <i></i>
</div>
<div class="container">
  <div class="fix_width">
    <div class="side">
      <div class="title">Projetos Atuais</div>
      <% $projetos.each do |projeto| %>
        <div class="projetos"><%= projeto.nome.upcase %></div>
        <div class="descricao"><%= projeto.descricao %></div>
      <% end %>
    </div>
    <div class="side">
      <div class="title">Agenda</div>
    </div>
    <div class="side">
      <div class="title">Contato</div>
    </div>
    <i></i>
  </div>
  <div class="extended">
    <div class="fix_width">
      footer
    </div>
  </div>
</div>
</body>
</html>
